{
  "resources": {
    "head": [
      {
        "type": "script",
        "src": "./source/app.js"
      }
    ]
  },
  "options": {
    "properties": {
      "embeds": {
        "title": "Tracks or Playlists",
        "type": "array",
        "items": {
          "title": "Embed",
          "type": "object",
          "properties": {
            "url": {
              "title": "URL",
              "type": "string",
              "description": "The URL of the SoundCloud track or playlist to be embedded",
              "order": 1,
              "default": "https://soundcloud.com/chookiemusic/viceroy-dream-of-bombay-feat"
            },
            "location": {
              "title": "Location",
              "type": "object",
              "format": "element",
              "default": {
                "selector": "body",
                "method": "prepend"
              },
              "description": "Select where on the page would you like this embed to appear",
              "order": 2
            },
            "showComments": {
              "title": "Show Comments",
              "type": "boolean",
              "description": "Should comments be shown on the track(s)?",
              "default": true,
              "order": 3
            }
          }
        }
      }
    }
  }
}
